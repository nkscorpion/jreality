if [ -f /tmp/jReality-portal-server-pid ]; then
  echo "server is running (pid $(</tmp/jReality-portal-server-pid))"
  exit
fi
for f in $(ls {dist,lib}/*.jar); do export CLASSPATH=$CLASSPATH:$PWD/$f; done
killall rmiregistry
sleep 1
rmiregistry &
sleep 2
java -Djava.library.path=$HOME/usr/lib/ szg.framework.event.remote.RemoteEventGeneratorMainImpl &
echo >/tmp/jReality-portal-server-pid $!
sleep 1
